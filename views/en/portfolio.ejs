<%- include('../layout/head'); %>

    <body>
        <header>
            <%- include('layout/nav'); %>
                <section id="portfolio_header">
                    <h1>Your wedding captured<br>exactly as you wish</h1>
                    <img src="/_portfolio/landing.webp" alt="Wedding Rings Photo">
                </section>
        </header>

        <main class="transform_main">
            <section id="portfolio">
                <h3>Portfolio</h3>

                <div>
                    <% portfolioImages.forEach(function(image) { %>
                        <a href="/<%= image.replace('/portfolio', '_original') %>">
                            <img src="<%= image %>" alt="Portfolio image">
                            <% }) %>
                        </a>
                </div>

                <button id="load_more">Load more</button>
            </section>
        </main>

        <%- include('layout/contact'); %>
    </body>

    </html>