<%- include('layout/head'); %>

    <body id="prices_body">
        <header>
            <%- include('layout/nav'); %>
        </header>

        <main>
            <section class="about_section">
                <% if(package=='4 uur' ) { %>
                    <img class="right" src="/prices/4-hours.jpg" alt="Portret foto">
                    <% } else if(package=='2 uur' ) { %>
                        <img src="/prices/2-hours.jpg" alt="Portret foto">
                        <% } else if(package=='1 uur' ) { %>
                            <img class="left" src="/prices/1-hour.jpg" alt="Portret foto">
                            <% } %>
                                <article>
                                    <h2>
                                        Tot <%= package %> fotografie
                                    </h2>
                                    <% if(package=='4 uur' ) { %>
                                        <p>
                                            Dit is 4 uur fotografie
                                        </p>
                                        <% } else if(package=='2 uur' ) { %>
                                            <p>
                                                Dit is 2 uur fotografie
                                            </p>
                                            <% } else if(package=='1 uur' ) { %>
                                                <p>
                                                    Dit is 1 uur fotografie
                                                </p>
                                                <% } %>
                                                    <a href="#contact">Neem contact met mij op</a>
                                </article>
            </section>

            <section class="links">
                <h2>Overige pakketten</h2>
                <div>
                    <a href="/tarieven">
                        <img src="/prices/wedding.jpg" alt="Bruiloft tarieven foto">
                        <div>
                            <h2>Bruiloft tarieven<br>op maat</h2>
                            <p>Meer informatie</p>
                        </div>
                    </a>
                    <% if(package!=='4 uur' ) { %>
                        <a href="/tarieven/4-uur">
                            <img class="right" src="/prices/4-hours.jpg" alt="Portret foto">
                            <div>
                                <h2>Tot 4 uur<br>fotografie</h2>
                                <p>Meer informatie</p>
                            </div>
                        </a>
                        <% } if(package!=='2 uur' ) { %>
                            <a href="/tarieven/2-uur">
                                <img src="/prices/2-hours.jpg" alt="Portret foto">
                                <div>
                                    <h2>Tot 2 uur<br>fotografie</h2>
                                    <p>Meer informatie</p>
                                </div>
                            </a>
                            <% } if(package!=='1 uur' ) { %>
                                <a href="/tarieven/1-uur">
                                    <img class="left" src="/prices/1-hour.jpg" alt="Portret foto">
                                    <div>
                                        <h2>Tot 1 uur<br>fotografie</h2>
                                        <p>Meer informatie</p>
                                    </div>
                                </a>
                                <% } %>
                </div>
            </section>
        </main>

        <%- include('layout/contact'); %>
    </body>

    </html>